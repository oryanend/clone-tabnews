{
  "name": "clone-tabnews",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "next build",
    "start": "next start",
    "dev": "npm run services:up && npm run services:wait:database && npm run migrations:up && next dev",
    "test": "npm run services:up && concurrently -n next,jest --hide next -k -s command-jest \"next dev\" \"jest --runInBand --verbose\"",
    "posttest": "npm run services:stop",
    "test:watch": "jest --watchAll --runInBand --verbose",
    "services:up": "docker compose -f infra/compose.yaml up -d",
    "services:stop": "docker compose -f infra/compose.yaml stop",
    "services:down": "docker compose -f infra/compose.yaml down",
    "services:wait:database": "node infra/scripts/wait-for-postgres.js",
    "migrations:create": "node-pg-migrate -m infra/migrations create",
    "migrations:up": "node-pg-migrate -m infra/migrations --envPath .env.development up",
    "lint:prettier:check": "prettier --check .",
    "lint:prettier:fix": "prettier --write .",
    "lint:eslint:check": "eslint .",
    "prepare": "husky",
    "commit": "cz"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/oryanend/clone-tabnews.git"
  },
  "author": "Ryan Almeida Oliveira",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/oryanend/clone-tabnews/issues"
  },
  "homepage": "https://github.com/oryanend/clone-tabnews#readme",
  "dependencies": {
    "@commitlint/config-conventional": "20.0.0",
    "async-retry": "1.3.3",
    "bcryptjs": "3.0.2",
    "dotenv": "17.2.3",
    "dotenv-expand": "12.0.3",
    "eslint": "9.39.2",
    "eslint-config-next": "16.1.1",
    "eslint-config-prettier": "10.1.8",
    "eslint-plugin-jest": "29.11.1",
    "next": "16.0.10",
    "next-connect": "1.0.0",
    "node-pg-migrate": "6.2.2",
    "pg": "8.16.3",
    "react": "19.2.0",
    "react-dom": "19.2.0",
    "swr": "^2.3.8",
    "uuid": "11.1.0"
  },
  "devDependencies": {
    "@commitlint/cli": "20.1.0",
    "@faker-js/faker": "9.7.0",
    "commitizen": "4.3.1",
    "concurrently": "9.2.1",
    "cz-conventional-changelog": "3.3.0",
    "husky": "9.1.7",
    "jest": "30.2.0",
    "prettier": "3.7.1"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
